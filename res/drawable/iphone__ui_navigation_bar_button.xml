<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape android:shape="rectangle">
			<corners android:radius="4dp" />
			<gradient
				android:angle="270"
				android:startColor="@color/iphone__gray"
				android:endColor="@color/iphone__gray" />
			<padding
				android:left="4dp"
				android:top="4dp"
				android:right="4dp"
				android:bottom="4dp" />
			<stroke
				android:width="1px"
				android:color="@color/iphone__clear" />
		</shape>
	</item>
	<item>
		<shape android:shape="rectangle">
			<corners android:radius="4dp" />
			<gradient
				android:angle="270"
				android:startColor="@color/iphone__clear"
				android:endColor="@color/iphone__clear" />
			<padding
				android:left="4dp"
				android:top="4dp"
				android:right="4dp"
				android:bottom="4dp" />
			<stroke
				android:width="1px"
				android:color="@color/iphone__clear" />
		</shape>
	</item>
</selector>